// prisma/schema.v7.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Link {
  id          String   @id @default(cuid())
  code        String   @unique
  targetUrl   String
  totalClicks Int      @default(0)
  lastClicked DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
  @@index([code])
}
